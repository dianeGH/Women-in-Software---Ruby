require 'time'
require 'date'

t = Time.now

if (t.monday?) then
  puts "Today is a Monday"
end
if (t.tuesday?) then
  puts "Today is a Tuesday"
end
if (t.wednesday?) then
  puts "Today is a Wednesday"
end
if (t.thursday?) then
  puts "Today is a Thursday"
end
if (t.friday?) then
  puts "Today is a Friday"
end
if (t.saturday?) then
  puts "Today is a Saturday"
end  
if (t.sunday?) then
    puts "Today is a Sunday"
end

print "Input your date of birth DDMMYYYY: \n"
Dob = gets

DOBSplit = Dob.split('')

DD1 = DOBSplit[0] + DOBSplit[1]
MM1 = DOBSplit[2] + DOBSplit[3]
YYYY1 = DOBSplit[4] + DOBSplit[5] + DOBSplit[6] + DOBSplit[7]

DD = DD1.to_i
MM = MM1.to_i
YYYY = YYYY1.to_i

DOBStr = DateTime.new(YYYY,MM,DD,0)

if (DOBStr.monday?) then
  puts "You were born on a Monday \n 
**>>Monday's child is fair of face <<** \n
Tuesday's child is full of grace  \n
Wednesday's child is full of woe  \n
Thursday's child has far to go,  \n
Friday's child is loving and giving,  \n
Saturday's child works hard for a living,  \n
And the child that is born on the Sabbath day  \n
Is bonny and blithe, and good and gay.  \n"
end
